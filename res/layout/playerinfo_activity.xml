<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/playerinfo_activity_title"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true" >

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="btnStart"
            android:text="@string/playerinfo_activity_btn_start"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mid_bar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_bar"
        android:layout_below="@id/top_bar"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/player_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/playerinfo_boy"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/boy_1" />

            <ImageView
                android:id="@+id/playerinfo_girl"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/girl_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_gender"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_playerinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Test"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/playerName_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nameChange"
                android:background="@drawable/chapter_level_egg_raw" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>